---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { products } from '../data/products';
import Y2KBackground from '../components/Y2KBackground.astro';

const featuredProducts = products;
---

<Layout title="Inicio">
  <Y2KBackground />

  <!-- Sección principal con imagen -->
  <section class="hero relative min-h-screen">
    <div class="container mx-auto px-4 pt-20">
      <div class="relative max-w-6xl mx-auto" data-aos="fade-up">
        <img 
          src="/images/Kaya-Indumentaria-inicio.svg"
          alt="Kaya Indumentaria"
          class="relative z-10 w-full h-auto mx-auto"
          style="max-width: min(90vw, 800px);"
        />
      </div>
    </div>
  </section>

  <!-- Sección de productos destacados -->
  <section class="featured-products py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold mb-12 brutalist-border inline-block px-4 py-2" data-aos="fade-right">
        DESTACADOS
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredProducts.map((product, index) => (
          <div data-aos="fade-up" data-aos-delay={index * 100}>
            <ProductCard {...product} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Sección con enlace a la galería -->
  <div class="container mx-auto px-4 text-center pb-20" data-aos="fade-up">
    <a href="/galeria" class="brutalist-border px-8 py-4 text-xl inline-block mt-8">
      EXPLORAR COLECCIÓN
    </a>
  </div>
</Layout>

<style>
  .hero {
    position: relative;
    z-index: 1;
  }

  .featured-products {
    position: relative;
    z-index: 1;
  }
</style>