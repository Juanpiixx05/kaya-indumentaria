---
import Layout from '../layouts/Layout.astro';
import MercadoPagoButton from '../components/MercadoPagoButton';
---

<Layout title="Test MercadoPago">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-4">Prueba de MercadoPago</h1>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl mb-2">Producto de Prueba</h2>
      <p class="text-gray-600 mb-4">Precio: $100</p>
      <MercadoPagoButton 
        client:load
        title="Producto de Prueba"
        price={100}
        quantity={1}
      />
    </div>
  </div>
</Layout>
