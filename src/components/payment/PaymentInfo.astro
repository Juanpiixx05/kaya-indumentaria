<div class="max-w-2xl mx-auto p-6 brutalist-border bg-kaya-dark/50" data-aos="fade-up">
  <h2 class="text-2xl font-bold mb-6">Información de Pago</h2>
  
  <form class="space-y-6">
    <div>
      <label for="cardName" class="block text-sm font-mono mb-2">Nombre en la Tarjeta</label>
      <input
        type="text"
        id="cardName"
        required
        class="w-full p-2 bg-kaya-dark brutalist-border focus:outline-none"
      />
    </div>

    <div>
      <label for="cardNumber" class="block text-sm font-mono mb-2">Número de Tarjeta</label>
      <input
        type="text"
        id="cardNumber"
        required
        pattern="[0-9]{16}"
        class="w-full p-2 bg-kaya-dark brutalist-border focus:outline-none"
      />
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <label for="expiry" class="block text-sm font-mono mb-2">Fecha de Expiración</label>
        <input
          type="text"
          id="expiry"
          placeholder="MM/YY"
          required
          class="w-full p-2 bg-kaya-dark brutalist-border focus:outline-none"
        />
      </div>
      <div>
        <label for="cvv" class="block text-sm font-mono mb-2">CVV</label>
        <input
          type="text"
          id="cvv"
          required
          pattern="[0-9]{3,4}"
          class="w-full p-2 bg-kaya-dark brutalist-border focus:outline-none"
        />
      </div>
    </div>

    <button
      type="submit"
      class="w-full brutalist-border py-2 px-4 font-mono hover:text-kaya-accent"
      onclick="window.location.href='/galeria/confirmacion'"
    >
      CONTINUAR
    </button>
  </form>
</div>