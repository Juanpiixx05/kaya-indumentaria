<div class="background-container">
  <div class="gradient-sphere"></div>
  <div class="gradient-sphere secondary"></div>
</div>

<style>
  .background-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    background-color: var(--bg-color);
  }

  .gradient-sphere {
    position: absolute;
    width: 90vh;
    height: 90vh;
    top: -30vh;
    right: -30vh;
    border-radius: 50%;
    background: radial-gradient(circle at center, rgba(165, 3, 3, 0.3), transparent 70%);
    filter: blur(40px);
    animation: moveGradient 15s ease infinite alternate;
    mix-blend-mode: multiply;
  }

  .gradient-sphere.secondary {
    width: 100vh;
    height: 100vh;
    left: -30vh;
    bottom: -30vh;
    top: auto;
    right: auto;
    background: radial-gradient(circle at center, rgba(0, 0, 0, 0.15), transparent 70%);
    animation: moveGradient 20s ease infinite alternate-reverse;
  }

  @keyframes moveGradient {
    0% {
      transform: translate(0, 0) scale(1);
    }
    100% {
      transform: translate(5%, 5%) scale(1.1);
    }
  }

  /* Ajustes para modo oscuro */
  :root[data-theme="dark"] .gradient-sphere {
    background: radial-gradient(circle at center, rgba(165, 3, 3, 0.4), transparent 70%);
    mix-blend-mode: screen;
  }

  :root[data-theme="dark"] .gradient-sphere.secondary {
    background: radial-gradient(circle at center, rgba(255, 255, 255, 0.1), transparent 70%);
  }
</style>
