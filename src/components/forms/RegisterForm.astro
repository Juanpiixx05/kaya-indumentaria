<form class="max-w-md mx-auto p-6 brutalist-border bg-kaya-dark/50" data-aos="fade-up">
  <h2 class="text-2xl font-bold mb-6">Registro</h2>
  
  <div class="space-y-4">
    <div>
      <label for="name" class="block text-sm font-mono mb-2">Nombre Completo</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full p-2 bg-kaya-dark brutalist-border focus:outline-none"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-mono mb-2">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full p-2 bg-kaya-dark brutalist-border focus:outline-none"
      />
    </div>

    <div>
      <label for="password" class="block text-sm font-mono mb-2">Contrase√±a</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        minlength="8"
        class="w-full p-2 bg-kaya-dark brutalist-border focus:outline-none"
      />
    </div>

    <button
      type="submit"
      class="w-full brutalist-border py-2 px-4 font-mono hover:text-kaya-accent"
    >
      REGISTRARSE
    </button>
  </div>
</form>