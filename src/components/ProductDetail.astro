---
import ThemeToggle from '../components/ThemeToggle.astro';
interface Props {
  id: number;
  name: string;
  price: number;
  image: string;
  description: string;
  sizes: string[];
}

const { id, name, price, image, description, sizes } = Astro.props;
---

<div class="max-w-6xl mx-auto p-6">
  <div class="grid md:grid-cols-2 gap-12" data-aos="fade-up">
    <div class="brutalist-border p-4">
      <img 
        src={image} 
        alt={name}
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="space-y-6">
      <h1 class="text-4xl font-bold">{name}</h1>
      <p class="text-2xl font-mono text-kaya-accent">${price}</p>
      <p class="font-mono">{description}</p>
      
      <div class="space-y-4">
        <h3 class="text-xl font-bold">Tallas</h3>
        <div class="flex gap-4">
          {sizes.map(size => (
            <button class="brutalist-border px-4 py-2 hover:text-kaya-accent">
              {size}
            </button>
          ))}
        </div>
      </div>
      
      <a 
        href={`/galeria/metodo-pago?product=${id}`}
        class="brutalist-border w-full py-3 mt-8 hover:text-kaya-accent transition-colors inline-block text-center text-lg"
      >
        COMPRAR AHORA
      </a>
    </div>
  </div>
</div>