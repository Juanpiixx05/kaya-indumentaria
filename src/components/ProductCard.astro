---
interface Props {
  name: string;
  price: number;
  image: string;
}

const { name, price, image } = Astro.props;
---

<div class="brutalist-border p-4 bg-kaya-dark hover:bg-kaya-dark/90 transition-all">
  <div class="relative aspect-square overflow-hidden mb-4">
    <img 
      src={image} 
      alt={name}
      class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-300"
    />
  </div>
  <h3 class="text-xl font-bold mb-2">{name}</h3>
  <p class="font-mono text-kaya-accent">${price}</p>
  <button class="brutalist-border w-full py-2 mt-4 hover:text-kaya-accent transition-colors">
    AGREGAR AL CARRITO
  </button>
</div>