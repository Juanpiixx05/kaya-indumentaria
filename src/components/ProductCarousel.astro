<div class="w-full py-12 bg-kaya-dark/5">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl font-bold mb-8">Productos Destacados</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Producto 1 -->
      <a href="/products/3.png" class="brutalist-border bg-white hover:scale-105 transition-transform">
        <div class="relative aspect-square">
          <img 
            src="/products/3.png" 
            alt="Remera Oversize"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-4">
          <h3 class="font-bold">Remera Oversize</h3>
          <p class="text-kaya-accent font-mono">$15000</p>
        </div>
      </a>

      <!-- Producto 2 -->
      <a href="/products/10.png" class="brutalist-border bg-white hover:scale-105 transition-transform">
        <div class="relative aspect-square">
          <img 
            src="/products/10.png" 
            alt="Pantalón Cargo"
            class="w-full h-full object-fit"
          />
        </div>
        <div class="p-4">
          <h3 class="font-bold">Pantalón Cargo</h3>
          <p class="text-kaya-accent font-mono">$25000</p>
        </div>
      </a>

      <!-- Producto 3 -->
      <a href="/producto/1.png" class="brutalist-border bg-white hover:scale-105 transition-transform">
        <div class="relative aspect-square">
          <img 
            src="/products/1.png" 
            alt="Hoodie Essential"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-4">
          <h3 class="font-bold">Hoodie Essential</h3>
          <p class="text-kaya-accent font-mono">$20000</p>
        </div>
      </a>
    </div>
  </div>
</div>