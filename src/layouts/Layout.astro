---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import 'aos/dist/aos.css';
import ThemeToggle from '../components/ThemeToggle.astro';
import type { HTMLAttributes } from 'astro/types';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Kaya Indumentaria - Vanguardia en estilo" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/kaya-ind-favicon.jpg" />
    <title>Kaya Indumentaria | {title}</title>
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      :root {
        --bg-color-light: #fff9f9;
        --text-color-light: #000000;
        --bg-color-dark: #121212;
        --text-color-dark: #ffffff;
        
        --gradient-light: linear-gradient(
          135deg, 
          rgb(245, 245, 245) 0%, 
          rgba(230, 230, 250, 0.877) 50%, 
          rgb(255, 255, 255) 100%
        );
        --gradient-dark: linear-gradient(
          135deg, 
          rgba(0, 0, 0, 0.3) 0%, 
          rgba(20, 20, 40, 0.5) 50%, 
          rgba(10, 10, 20, 0.3) 100%
        );
      }

      html {
        background-color: var(--bg-color-light);
        color: var(--text-color-light);
      }

      html[data-theme='dark'] {
        background-color: var(--bg-color-dark);
        color: var(--text-color-dark);
      }

      body {
        min-height: 100vh;
        background: var(--gradient-dark);
        background-size: cover;
        background-blend-mode: overlay;
        color: var(--text-color-light);
        position: relative;
        transition: background 0.3s ease, color 0.3s ease;
      }

      html[data-theme='dark'] body {
        background: var(--gradient-dark);
        color: var(--text-color-dark);
      }

      html[data-theme='light'] body {
        background: var(--gradient-light);
        color: var(--text-color-light);
        background-size: cover;
        background-blend-mode: soft-light;
      }
    </style>

    <script>
      import AOS from 'aos';
      
      // Inicializar AOS
      AOS.init({
        duration: 800,
        once: true,
        offset: 50
      });

      // Inicializar tema
      const savedTheme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      
      const theme = savedTheme || (prefersDark ? 'dark' : 'light');
      
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    </script>

    <style is:global>
      @font-face {
        font-family: "Konstant Grotesk Neue";
        src: url("/fonts/NeueKonstantGrotesk-Book.otf") format("opentype");
        font-style: normal;
        font-display: swap;
        font-weight: normal;
      }

      :root {
        -webkit-backdrop-filter: blur(10000px);
      }

      html {
        font-family: "Konstant Grotesk Neue", system-ui, sans-serif;
        margin: 0;
        padding: 0;
        transition: background-color 0.3s, color 0.3s;
      }

      .brutalist-border {
        background-color: var(--bg-color-light);
        color: var(--text-color-light);
        border: 2px solid currentColor;
        transition: all 0.3s ease;
      }

      .brutalist-border:hover {
        transform: translate(-4px, -4px);
        box-shadow: 4px 4px 0 rgb(165, 3, 3);
      }
    </style>
  </body>
</html>
