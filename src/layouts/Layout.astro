---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import 'aos/dist/aos.css';
import ThemeToggle from '../components/ThemeToggle.astro';
import type { HTMLAttributes } from 'astro/types';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Kaya Indumentaria - Vanguardia en estilo" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/kaya-ind-favicon.jpg" />
    <title>Kaya Indumentaria | {title}</title>
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
    <style>
      :root {
        --gradient-light: linear-gradient(
          135deg, 
          rgb(245, 245, 245) 0%, 
          rgba(230, 230, 250, 0.877) 50%, 
          rgb(255, 255, 255) 100%
        );
        --gradient-dark: linear-gradient(
          135deg, 
          rgba(0, 0, 0, 0.3) 0%, 
          rgba(20, 20, 40, 0.5) 50%, 
          rgba(10, 10, 20, 0.3) 100%
        );
      }

      .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        opacity: 0.7;
        display: none;
      }

      body {
        min-height: 100vh;
        background: var(--gradient-dark);
        background-size: cover;
        background-blend-mode: overlay;
        color: var(--text-color-light);
        position: relative;
        transition: background 0.3s ease, color 0.3s ease;
      }

      body.light-theme {
        background: var(--gradient-light);
        color: var(--text-color-light);
        background-size: cover;
        background-blend-mode: soft-light;
      }
    </style>
    <script>
      import AOS from 'aos';
      
      // Inicializar AOS
      AOS.init({
        duration: 800,
        once: true,
        offset: 50
      });

      // Inicializar tema
      const savedTheme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      
      const theme = savedTheme || (prefersDark ? 'dark' : 'light');
      
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);

      // Función para cambiar el tema
      const toggleTheme = () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        
        // Añadir/remover clase para cambiar fondo
        document.body.classList.toggle('light-theme', newTheme === 'light');
      };

      // Añadir evento de toggle
      document.addEventListener('DOMContentLoaded', () => {
        const themeToggle = document.getElementById('theme-toggle');
        if (themeToggle) {
          themeToggle.addEventListener('click', toggleTheme);
        }
      });
    </script>

    <style is:global>
      :root {
        --bg-color-light: #fff9f9;
        --text-color-light: #000000;
        --bg-color-dark: #121212;
        --text-color-dark: #ffffff;
        
        -webkit-backdrop-filter: blur(10000px);
        --bg-color: #fff9f9;
        --text-color: #000000;
      }

      :root[data-theme="dark"] {
        --bg-color: #1a1a1a;
        --text-color: #ffffff;
      }

      :root[data-theme="dark"] .hero-image {
        filter: brightness(1.2) contrast(1.1);
      }

      html {
        background-color: var(--bg-color);
        color: var(--text-color);
      }

      body {
        font-family: "Konstant Grotesk Neue", system-ui, sans-serif;
        margin: 0;
        padding: 0;
        line-height: 1.6;
      }

      .brutalist-border {
        background-color: var(--bg-color);
        color: var(--text-color);
        border: 2px solid currentColor;
        transition: all 0.3s ease;
      }
    </style>
  </body>
</html>
